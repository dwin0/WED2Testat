<form id="newNote" action="/notes">
    <input type="submit" value="Create new Note">
</form>

<button id="changeStyle">BlackWhite-Style</button>

<button id="byFinishDate">By finish Date</button>
<button id="byCreatedDate">By created Date</button>
<button id="byImportance">By Importance</button>

<button id="showFinished">Show finished</button>

{{#each notes}}
    <p>Titel: {{title}}</p>
    <p>Beschreibung: {{description}}</p>
    <p>Wichtigkeit: {{importance}}</p>
    <p>Erledigt bis: {{timeUntil endDate}}</p>
    <p>Id: {{_id}}</p>
    <p>Erstellt am: {{createdDate}}</p>
    <p>Erledigt? {{finished}}</p>

    <form action="/notes/{{_id}}">
        <input type="submit" value="Edit">
    </form>

    <form action='/notes/{{_id}}' method='post'><input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Delete Note'></form>
{{/each}}