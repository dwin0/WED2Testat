{{#with note}}
    <h2>Edit {{title}}</h2>
    <hr class="horizontalLine">
    <form action="/note/{{_id}}" method="post">
        <div class="rowToColumn">
            <label class="inputLabel">Titel</label>
            <input class="input" type="text" id="title" name="title" value="{{title}}" required>
        </div>
        <div class="rowToColumn">
            <label class="inputLabel">Beschreibung</label>
            <textarea class="input" rows="3" id="description" name="description" value="{{description}}"></textarea>
        </div>
        <div class="rowToColumn">
            <label class="inputLabel">Wichtigkeit</label>
            <input class="input" type="number" min="0" max="5" id="importance" name="importance" value="{{importance}}" required>
        </div>
        <div class="rowToColumn">
            <label class="inputLabel">Fertig bis</label>
            <input class="input" type="date" id="endDate" name="endDate" value="{{endDate}}" required>
        </div>
        <div class="row">
            <label class="spaceLabel"></label>
            <label>
                {{#if finished}}
                    <input type="checkbox" id="isFinished" name="finished" checked>Erledigt!</label>
                    {{else}}
                    <input type="checkbox" id="notFinished" name="finished">Erledigt!</label>
                {{/if}}
        </div>
        <div class="row">
            <label class="spaceLabel"></label>
            <input type="submit" value="Speichern">
        </div>
    </form>
    <div class="row">
        <label class="spaceLabel"></label>
        <a href="/">
            <button>Abbruch</button>
        </a>
    </div>

{{else}}
    <form action="/note" method="post">
        <label>Titel
            <input type="text" id="title" name="title" value="Beispiel" required></label>
        <label>Beschreibung
            <input type="text" id="description" name="description" value="Text"></label>
        <label>Wichtigkeit
            <input type="number" min="0" max="5" id="importance" name="importance" value="1" required></label>
        <label>Fertig bis
            <input type="date" id="endDate" name="endDate" value="2016-10-12" required></label>
        <label>
            <input type="checkbox" id="finished" name="finished">Erledigt!</label>
        <input type="submit" value="Anlegen">
    </form>
    <a href="/">
        <button>Abbruch</button>
    </a>
{{/with}}